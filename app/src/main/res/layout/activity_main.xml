<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F1734"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="75dp"
        android:background="@drawable/botonredondo"
        android:drawableLeft="@drawable/acceso32"
        android:fontFamily="sans-serif"
        android:text="Inicia Sesión"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/registerbtn"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="10dp"
        android:background="#a6828282" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar nuevo Usuario"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/loginbtn"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="11dp"
        android:background="#a6828282" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/cinesbtn"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="22dp"
        android:background="#a6828282" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="171dp"
        android:layout_height="31dp"
        android:layout_marginTop="140dp"
        android:text="Nuestros cines"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />
</LinearLayout>